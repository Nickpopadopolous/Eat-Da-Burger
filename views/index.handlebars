<div class="jumbotron">
<h1>
Eat Da Burger</h1>
<img src="http://downloadclipart.org/do-upload/clipart/2016-07/Burger_png_clipart.png" alt="burger" height="42" width="42"/>
</div>
<div class="container">
  <div class= "col-xs-12 text-center" >
    <h2>Ready to devoured!</h2>
    <ol>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
           <form action="burgers/update/{{this.id}}?_method=PUT" method="POST"> 
              {{this.burger_name}}
              <input type="hidden" name="devoured" value="true">
              <button class="burgerButton" type="submit">Devoure it!</button>  
            </form>
          </li>
        {{/unless}}
      {{/each}}
    </ol>
  </div>
  <div class= "col-xs-12 text-center" >
    <h2>Devoured!</h2>
    <ol>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
              <input type="hidden" name="devoured" value="false">
              {{this.burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ol>
  </div>
</div>
<hr>
<br>
<div class="addBurger">
  <p>Enter a burger you want to eat Click the "Submit" button"</p>
  <form class="create-update-form" action="burgers/create" method="POST">
    <h2>Add a burger</h2>
      <div class="form-group">
        <label for="bur">Burger Name:</label>
        <input type="text" id="burgerOne" name="burger_name">
      </div>
      <button type="submit">Add Burger</button>
   </form>
</div>